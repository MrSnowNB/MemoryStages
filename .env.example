# Database configuration
DB_PATH=./data/memory.db
DEBUG=true

# Vector system configuration (Stage 2 - default disabled)
VECTOR_ENABLED=false
VECTOR_PROVIDER=memory
EMBED_PROVIDER=hash
SEARCH_API_ENABLED=false

# Semantic search configuration (Stage 3 enhancements)
SEMANTIC_SIMILARITY_THRESHOLD=0.7

# Heartbeat system configuration (Stage 3 - default disabled)
HEARTBEAT_ENABLED=false
HEARTBEAT_INTERVAL_SEC=60
CORRECTION_MODE=propose
DRIFT_RULESET=strict

# Approval workflow and schema validation configuration (Stage 4 - default disabled)
APPROVAL_ENABLED=false
APPROVAL_MODE=manual
APPROVAL_TIMEOUT_SEC=3600
SCHEMA_VALIDATION_STRICT=false

# Operations dashboard configuration (Stage 5 - default disabled)
DASHBOARD_ENABLED=false
DASHBOARD_TYPE=tui
DASHBOARD_AUTH_TOKEN=
DASHBOARD_SENSITIVE_ACCESS=false
DASHBOARD_MAINTENANCE_MODE=false

# Privacy and Maintenance Controls (Stage 6 - default disabled)
PRIVACY_ENFORCEMENT_ENABLED=false
PRIVACY_AUDIT_LEVEL=standard
BACKUP_ENABLED=false
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_INCLUDE_SENSITIVE=false
MAINTENANCE_ENABLED=false
MAINTENANCE_SCHEDULE_SEC=86400

# MVP Swarm Configuration - SINGLE POINT OF CONTROL (Stage 7)
OLLAMA_MODEL=liquid-rag:latest
SWARM_ENABLED=false
SWARM_AGENT_COUNT=4
SWARM_ORCHESTRATOR_TYPE=rule_based
RESPONSE_VALIDATION_STRICT=true

# Bot Activation Configuration - ALWAYS CREATE AGENTS
DEVELOPMENT_MODE=true
SWARM_FORCE_MOCK=true
CHAT_API_ENABLED=true
